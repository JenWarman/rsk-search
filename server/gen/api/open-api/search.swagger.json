  "paths": {
    "/api/episode/{id}": {
      "get": {
        "summary": "Fetch the full data for an episode including the transcript",
        "operationId": "SearchService_GetEpisode",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/rsksearchEpisode"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "search"
        ]
      }
    },
    "/api/metadata": {
      "get": {
        "summary": "Fetch search metadata e.g. searchable fields",
        "operationId": "SearchService_ListFieldValues",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/rsksearchFieldValueList"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "field",
            "in": "query",
            "required": false,
            "type": "string"
          },
          {
            "name": "prefix",
            "in": "query",
            "required": false,
            "type": "string"
          }
        ],
        "tags": [
          "search"
        ]
      }
    },
    "/api/search": {
      "get": {
        "summary": "Perform a search",
        "operationId": "SearchService_Search",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/rsksearchSearchResultList"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "required": false,
            "type": "string"
          }
        ],
        "tags": [
          "search"
        ]
      }
    }
  },
